  <script>
    // DOM Elements
    const uploadZone = document.getElementById('uploadZone');
    const fileInput = document.getElementById('fileInput');
    const fileInfo = document.getElementById('fileInfo');
    const fileName = document.getElementById('fileName');
    const removeFileBtn = document.getElementById('removeFile');
    const editorCard = document.getElementById('editorCard');
    const waveformCanvas = document.getElementById('waveform');
    const waveformWrapper = document.getElementById('waveformWrapper');
    const playBtn = document.getElementById('playBtn');
    const playIcon = document.getElementById('playIcon');
    const trimBtn = document.getElementById('trimBtn');
    const startTimeInput = document.getElementById('startTime');
    const endTimeInput = document.getElementById('endTime');
    const status = document.getElementById('status');
    const statusText = document.getElementById('statusText');
    const playhead = document.getElementById('playhead');
    
    // Selection elements
    const selectionLeft = document.getElementById('selectionLeft');
    const selectionActive = document.getElementById('selectionActive');
    const selectionRight = document.getElementById('selectionRight');
    const handleLeft = document.getElementById('handleLeft');
    const handleRight = document.getElementById('handleRight');

    // State
    let audioContext = null;
    let audioBuffer = null;
    let audioSource = null;
    let uploadedFile = null;
    let duration = 0;
    let trimStart = 0;
    let trimEnd = 0;
    let isPlaying = false;
    let playStartTime = 0;
    let playOffset = 0;
    let animationFrame = null;

    // Initialize
    function init() {
      // Upload zone events
      uploadZone.addEventListener('click', () => fileInput.click());
      uploadZone.addEventListener('dragover', handleDragOver);
      uploadZone.addEventListener('dragleave', handleDragLeave);
      uploadZone.addEventListener('drop', handleDrop);
      fileInput.addEventListener('change', handleFileSelect);
      removeFileBtn.addEventListener('click', handleRemoveFile);
      
      // Playback controls
      playBtn.addEventListener('click', togglePlayback);
      
      // Trim button
      trimBtn.addEventListener('click', handleTrim);
      
      // Time inputs
      startTimeInput.addEventListener('change', handleTimeInputChange);
      endTimeInput.addEventListener('change', handleTimeInputChange);
      
      // Handle dragging
      setupDragHandles();
    }

    // Drag & Drop handlers
    function handleDragOver(e) {
      e.preventDefault();
      uploadZone.classList.add('dragover');
    }

    function handleDragLeave(e) {
      e.preventDefault();
      uploadZone.classList.remove('dragover');
    }

    function handleDrop(e) {
      e.preventDefault();
      uploadZone.classList.remove('dragover');
      const files = e.dataTransfer.files;
      if (files.length > 0 && files[0].type.startsWith('audio/')) {
        loadAudioFile(files[0]);
      }
    }

    function handleFileSelect(e) {
      if (e.target.files.length > 0) {
        loadAudioFile(e.target.files[0]);
      }
    }

    function handleRemoveFile(e) {
      e.stopPropagation();
      resetEditor();
    }

    function resetEditor() {
      uploadedFile = null;
      audioBuffer = null;
      duration = 0;
      trimStart = 0;
      trimEnd = 0;
      
      uploadZone.classList.remove('has-file');
      fileInfo.style.display = 'none';
      editorCard.classList.remove('show');
      fileInput.value = '';
      
      if (isPlaying) stopPlayback();
    }

    // Load and process audio file
    async function loadAudioFile(file) {
      uploadedFile = file;
      fileName.textContent = file.name;
      fileInfo.style.display = 'flex';
      uploadZone.classList.add('has-file');
      
      // Create audio context
      if (!audioContext) {
        audioContext = new (window.AudioContext || window.webkitAudioContext)();
      }
      
      try {
        const arrayBuffer = await file.arrayBuffer();
        audioBuffer = await audioContext.decodeAudioData(arrayBuffer);
        duration = audioBuffer.duration;
        trimStart = 0;
        trimEnd = duration;
        
        // Update UI
        document.getElementById('originalDuration').textContent = formatTime(duration);
        document.getElementById('selectedDuration').textContent = formatTime(duration);
        endTimeInput.value = formatTimeDetailed(duration);
        startTimeInput.value = '0:00.000';
        document.getElementById('endTimeDisplay').textContent = formatTime(duration);
        
        // Draw waveform
        drawWaveform();
        updateSelection();
        
        // Show editor
        editorCard.classList.add('show');
      } catch (err) {
        showStatus('error', 'Failed to load audio file');
        console.error(err);
      }
    }

    // Draw waveform
    function drawWaveform() {
      const canvas = waveformCanvas;
      const ctx = canvas.getContext('2d');
      const dpr = window.devicePixelRatio || 1;
      
      // Set canvas size
      canvas.width = canvas.offsetWidth * dpr;
      canvas.height = canvas.offsetHeight * dpr;
      ctx.scale(dpr, dpr);
      
      const width = canvas.offsetWidth;
      const height = canvas.offsetHeight;
      
      // Clear canvas
      ctx.fillStyle = '#0a0a0f';
      ctx.fillRect(0, 0, width, height);
      
      // Get audio data
      const channelData = audioBuffer.getChannelData(0);
      const step = Math.ceil(channelData.length / width);
      const amp = height / 2;
      
      // Draw waveform bars
      ctx.fillStyle = '#ff3366';
      
      for (let i = 0; i < width; i++) {
        let min = 1.0;
        let max = -1.0;
        
        for (let j = 0; j < step; j++) {
          const datum = channelData[(i * step) + j];
          if (datum < min) min = datum;
          if (datum > max) max = datum;
        }
        
        const barHeight = Math.max(2, (max - min) * amp * 0.8);
        const y = amp - barHeight / 2;
        
        // Create gradient effect
        const gradient = ctx.createLinearGradient(0, y, 0, y + barHeight);
        gradient.addColorStop(0, '#ff3366');
        gradient.addColorStop(0.5, '#ff6699');
        gradient.addColorStop(1, '#ff3366');
        ctx.fillStyle = gradient;
        
        ctx.fillRect(i, y, 1, barHeight);
      }
    }

    // Setup drag handles
    function setupDragHandles() {
      let dragging = null;
      let startX = 0;
      let startPos = 0;
      
      const onMouseDown = (e, handle) => {
        e.preventDefault();
        dragging = handle;
        startX = e.clientX || e.touches[0].clientX;
        startPos = handle === 'left' ? trimStart : trimEnd;
        document.addEventListener('mousemove', onMouseMove);
        document.addEventListener('mouseup', onMouseUp);
        document.addEventListener('touchmove', onMouseMove);
        document.addEventListener('touchend', onMouseUp);
      };
      
      handleLeft.addEventListener('mousedown', (e) => onMouseDown(e, 'left'));
      handleRight.addEventListener('mousedown', (e) => onMouseDown(e, 'right'));
      handleLeft.addEventListener('touchstart', (e) => onMouseDown(e, 'left'));
      handleRight.addEventListener('touchstart', (e) => onMouseDown(e, 'right'));
      
      const onMouseMove = (e) => {
        if (!dragging) return;
        
        const clientX = e.clientX || e.touches[0].clientX;
        const rect = waveformWrapper.getBoundingClientRect();
        const dx = clientX - startX;
        const dTime = (dx / rect.width) * duration;
        
        if (dragging === 'left') {
          trimStart = Math.max(0, Math.min(trimEnd - 0.1, startPos + dTime));
        } else {
          trimEnd = Math.max(trimStart + 0.1, Math.min(duration, startPos + dTime));
        }
        
        updateSelection();
        updateTimeInputs();
      };
      
      const onMouseUp = () => {
        dragging = null;
        document.removeEventListener('mousemove', onMouseMove);
        document.removeEventListener('mouseup', onMouseUp);
        document.removeEventListener('touchmove', onMouseMove);
        document.removeEventListener('touchend', onMouseUp);
      };
      
      // Click on waveform to set position
      waveformWrapper.addEventListener('click', (e) => {
        if (e.target === handleLeft || e.target === handleRight) return;
        
        const rect = waveformWrapper.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const clickTime = (x / rect.width) * duration;
        
        // Move nearest handle
        const distToStart = Math.abs(clickTime - trimStart);
        const distToEnd = Math.abs(clickTime - trimEnd);
        
        if (distToStart < distToEnd) {
          trimStart = Math.max(0, Math.min(trimEnd - 0.1, clickTime));
        } else {
          trimEnd = Math.max(trimStart + 0.1, Math.min(duration, clickTime));
        }
        
        updateSelection();
        updateTimeInputs();
      });
    }

    // Update selection overlay
    function updateSelection() {
      const startPercent = (trimStart / duration) * 100;
      const endPercent = (trimEnd / duration) * 100;
      
      selectionLeft.style.width = `${startPercent}%`;
      selectionRight.style.width = `${100 - endPercent}%`;
      selectionActive.style.left = `${startPercent}%`;
      selectionActive.style.width = `${endPercent - startPercent}%`;
      
      document.getElementById('startTimeDisplay').textContent = formatTime(trimStart);
      document.getElementById('endTimeDisplay').textContent = formatTime(trimEnd);
      document.getElementById('selectedDuration').textContent = formatTime(trimEnd - trimStart);
    }

    // Update time inputs
    function updateTimeInputs() {
      startTimeInput.value = formatTimeDetailed(trimStart);
      endTimeInput.value = formatTimeDetailed(trimEnd);
    }

    // Handle time input change
    function handleTimeInputChange() {
      const newStart = parseTime(startTimeInput.value);
      const newEnd = parseTime(endTimeInput.value);
      
      if (!isNaN(newStart) && newStart >= 0 && newStart < trimEnd) {
        trimStart = Math.min(newStart, duration);
      }
      
      if (!isNaN(newEnd) && newEnd > trimStart && newEnd <= duration) {
        trimEnd = newEnd;
      }
      
      updateSelection();
      updateTimeInputs();
    }

    // Playback controls
    function togglePlayback() {
      if (isPlaying) {
        stopPlayback();
      } else {
        startPlayback();
      }
    }

    function startPlayback() {
      if (!audioBuffer) return;
      
      // Resume audio context if suspended
      if (audioContext.state === 'suspended') {
        audioContext.resume();
      }
      
      audioSource = audioContext.createBufferSource();
      audioSource.buffer = audioBuffer;
      audioSource.connect(audioContext.destination);
      
      const playDuration = trimEnd - trimStart;
      audioSource.start(0, trimStart, playDuration);
      
      playStartTime = audioContext.currentTime;
      playOffset = trimStart;
      isPlaying = true;
      
      playIcon.innerHTML = '<path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>';
      playhead.classList.add('playing');
      
      audioSource.onended = () => {
        stopPlayback();
      };
      
      updatePlayhead();
    }

    function stopPlayback() {
      if (audioSource) {
        audioSource.stop();
        audioSource = null;
      }
      
      isPlaying = false;
      playIcon.innerHTML = '<path d="M8 5v14l11-7z"/>';
      playhead.classList.remove('playing');
      
      if (animationFrame) {
        cancelAnimationFrame(animationFrame);
        animationFrame = null;
      }
    }

    function updatePlayhead() {
      if (!isPlaying) return;
      
      const elapsed = audioContext.currentTime - playStartTime;
      const currentTime = playOffset + elapsed;
      const percent = (currentTime / duration) * 100;
      
      playhead.style.left = `${percent}%`;
      
      if (currentTime < trimEnd) {
        animationFrame = requestAnimationFrame(updatePlayhead);
      }
    }

    // Trim and download
    async function handleTrim() {
      if (!uploadedFile) return;
      
      trimBtn.disabled = true;
      trimBtn.innerHTML = '<div class="spinner"></div><span>Processing...</span>';
      hideStatus();
      
      try {
        const formData = new FormData();
        formData.append('audio', uploadedFile);
        formData.append('start', trimStart.toFixed(3));
        formData.append('end', trimEnd.toFixed(3));
        
        const response = await fetch('/trimmer/trim', {
          method: 'POST',
          body: formData
        });
        
        if (!response.ok) {
          const data = await response.json();
          throw new Error(data.error || 'Trim failed');
        }
        
        // Get the blob and download
        const blob = await response.blob();
        const url = URL.createObjectURL(blob);
        
        // Get filename from header or generate
        const contentDisposition = response.headers.get('Content-Disposition');
        let downloadFilename = 'trimmed_audio.mp3';
        if (contentDisposition) {
          const match = contentDisposition.match(/filename="(.+)"/);
          if (match) downloadFilename = match[1];
        }
        
        const a = document.createElement('a');
        a.href = url;
        a.download = downloadFilename;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
        
        showStatus('success', 'Audio trimmed successfully! Download started.');
      } catch (err) {
        showStatus('error', err.message);
      } finally {
        trimBtn.disabled = false;
        trimBtn.innerHTML = '<svg viewBox="0 0 24 24"><path d="M9.64 7.64c.23-.5.36-1.05.36-1.64 0-2.21-1.79-4-4-4S2 3.79 2 6s1.79 4 4 4c.59 0 1.14-.13 1.64-.36L10 12l-2.36 2.36C7.14 14.13 6.59 14 6 14c-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4c0-.59-.13-1.14-.36-1.64L12 14l7 7h3v-1L9.64 7.64zM6 8c-1.1 0-2-.89-2-2s.9-2 2-2 2 .89 2 2-.9 2-2 2zm0 12c-1.1 0-2-.89-2-2s.9-2 2-2 2 .89 2 2-.9 2-2 2zm6-7.5c-.28 0-.5-.22-.5-.5s.22-.5.5-.5.5.22.5.5-.22.5-.5.5zM19 3l-6 6 2 2 7-7V3h-3z"/></svg><span>Trim & Download</span>';
      }
    }

    // Utility functions
    function formatTime(seconds) {
      const mins = Math.floor(seconds / 60);
      const secs = Math.floor(seconds % 60);
      return `${mins}:${secs.toString().padStart(2, '0')}`;
    }

    function formatTimeDetailed(seconds) {
      const mins = Math.floor(seconds / 60);
      const secs = Math.floor(seconds % 60);
      const ms = Math.round((seconds % 1) * 1000);
      return `${mins}:${secs.toString().padStart(2, '0')}.${ms.toString().padStart(3, '0')}`;
    }

    function parseTime(str) {
      const parts = str.split(':');
      if (parts.length !== 2) return NaN;
      
      const mins = parseInt(parts[0], 10);
      const secParts = parts[1].split('.');
      const secs = parseInt(secParts[0], 10);
      const ms = secParts[1] ? parseInt(secParts[1], 10) / 1000 : 0;
      
      return mins * 60 + secs + ms;
    }

    function showStatus(type, message) {
      status.className = `status show ${type}`;
      statusText.textContent = message;
      
      const svg = status.querySelector('svg');
      if (type === 'error') {
        svg.innerHTML = '<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>';
      } else {
        svg.innerHTML = '<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>';
      }
    }

    function hideStatus() {
      status.classList.remove('show');
    }

    // Handle window resize
    window.addEventListener('resize', () => {
      if (audioBuffer) {
        drawWaveform();
      }
    });

    // Initialize
    init();
  </script>
