<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>YouTube Downloader</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --bg-primary: #0a0a0f;
      --bg-secondary: #12121a;
      --bg-card: #1a1a25;
      --accent: #ff3366;
      --accent-glow: rgba(255, 51, 102, 0.3);
      --text-primary: #f0f0f5;
      --text-secondary: #8888a0;
      --border: #2a2a3a;
      --success: #22c55e;
      --error: #ef4444;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Outfit', sans-serif;
      background: var(--bg-primary);
      min-height: 100vh;
      color: var(--text-primary);
      overflow-x: hidden;
    }

    /* Animated background */
    .bg-pattern {
      position: fixed;
      inset: 0;
      z-index: 0;
      background: 
        radial-gradient(ellipse at 20% 20%, rgba(255, 51, 102, 0.08) 0%, transparent 50%),
        radial-gradient(ellipse at 80% 80%, rgba(102, 51, 255, 0.08) 0%, transparent 50%),
        linear-gradient(180deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
    }

    .grid-overlay {
      position: fixed;
      inset: 0;
      z-index: 0;
      background-image: 
        linear-gradient(rgba(255, 51, 102, 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255, 51, 102, 0.03) 1px, transparent 1px);
      background-size: 60px 60px;
      mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
    }

    .container {
      position: relative;
      z-index: 1;
      max-width: 680px;
      margin: 0 auto;
      padding: 60px 24px;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    header {
      text-align: center;
      margin-bottom: 48px;
    }

    .logo {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 16px;
    }

    .logo-icon {
      width: 56px;
      height: 56px;
      background: linear-gradient(135deg, var(--accent), #cc2952);
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 8px 32px var(--accent-glow);
    }

    .logo-icon svg {
      width: 28px;
      height: 28px;
      fill: white;
    }

    h1 {
      font-size: 2.5rem;
      font-weight: 700;
      letter-spacing: -0.02em;
      background: linear-gradient(135deg, var(--text-primary), var(--text-secondary));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .subtitle {
      color: var(--text-secondary);
      font-size: 1.1rem;
      font-weight: 300;
      margin-top: 8px;
    }

    .card {
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 24px;
      padding: 32px;
      backdrop-filter: blur(20px);
    }

    .input-group {
      position: relative;
      margin-bottom: 24px;
    }

    .input-group label {
      display: block;
      font-size: 0.85rem;
      font-weight: 500;
      color: var(--text-secondary);
      margin-bottom: 10px;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .input-wrapper {
      position: relative;
    }

    .input-wrapper svg {
      position: absolute;
      left: 16px;
      top: 50%;
      transform: translateY(-50%);
      width: 20px;
      height: 20px;
      fill: var(--text-secondary);
      transition: fill 0.2s;
    }

    input[type="text"] {
      width: 100%;
      padding: 16px 16px 16px 48px;
      background: var(--bg-secondary);
      border: 2px solid var(--border);
      border-radius: 14px;
      font-size: 1rem;
      font-family: inherit;
      color: var(--text-primary);
      transition: all 0.2s;
    }

    input[type="text"]:focus {
      outline: none;
      border-color: var(--accent);
      box-shadow: 0 0 0 4px var(--accent-glow);
    }

    input[type="text"]:focus + svg,
    .input-wrapper:has(input:focus) svg {
      fill: var(--accent);
    }

    input::placeholder {
      color: var(--text-secondary);
    }

    .format-toggle {
      display: flex;
      gap: 12px;
      margin-bottom: 24px;
    }

    .format-option {
      flex: 1;
      position: relative;
    }

    .format-option input {
      position: absolute;
      opacity: 0;
      pointer-events: none;
    }

    .format-option label {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 8px;
      padding: 20px;
      background: var(--bg-secondary);
      border: 2px solid var(--border);
      border-radius: 14px;
      cursor: pointer;
      transition: all 0.2s;
    }

    .format-option label:hover {
      border-color: var(--text-secondary);
    }

    .format-option input:checked + label {
      border-color: var(--accent);
      background: rgba(255, 51, 102, 0.1);
      box-shadow: 0 0 0 4px var(--accent-glow);
    }

    .format-option svg {
      width: 32px;
      height: 32px;
      fill: var(--text-secondary);
      transition: fill 0.2s;
    }

    .format-option input:checked + label svg {
      fill: var(--accent);
    }

    .format-option span {
      font-size: 0.9rem;
      font-weight: 500;
      color: var(--text-secondary);
      transition: color 0.2s;
    }

    .format-option input:checked + label span {
      color: var(--text-primary);
    }

    .btn {
      width: 100%;
      padding: 18px;
      border: none;
      border-radius: 14px;
      font-size: 1rem;
      font-weight: 600;
      font-family: inherit;
      cursor: pointer;
      transition: all 0.2s;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--accent), #cc2952);
      color: white;
      box-shadow: 0 4px 20px var(--accent-glow);
    }

    .btn-primary:hover:not(:disabled) {
      transform: translateY(-2px);
      box-shadow: 0 8px 32px var(--accent-glow);
    }

    .btn-primary:active:not(:disabled) {
      transform: translateY(0);
    }

    .btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .btn svg {
      width: 20px;
      height: 20px;
      fill: currentColor;
    }

    .spinner {
      width: 20px;
      height: 20px;
      border: 2px solid transparent;
      border-top-color: currentColor;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    /* Video preview */
    .preview {
      margin-top: 24px;
      padding-top: 24px;
      border-top: 1px solid var(--border);
      display: none;
    }

    .preview.show {
      display: block;
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .preview-content {
      display: flex;
      gap: 16px;
    }

    .preview-thumbnail {
      width: 140px;
      height: 80px;
      border-radius: 10px;
      object-fit: cover;
      background: var(--bg-secondary);
      flex-shrink: 0;
    }

    .preview-info {
      flex: 1;
      min-width: 0;
    }

    .preview-title {
      font-size: 0.95rem;
      font-weight: 500;
      color: var(--text-primary);
      margin-bottom: 6px;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .preview-meta {
      font-size: 0.85rem;
      color: var(--text-secondary);
    }

    .preview-meta span {
      display: inline-flex;
      align-items: center;
      gap: 4px;
    }

    .preview-meta span:not(:last-child)::after {
      content: 'â€¢';
      margin: 0 8px;
      opacity: 0.5;
    }

    /* Status messages */
    .status {
      margin-top: 16px;
      padding: 14px 16px;
      border-radius: 12px;
      font-size: 0.9rem;
      display: none;
      align-items: center;
      gap: 10px;
    }

    .status.show {
      display: flex;
      animation: fadeIn 0.3s ease;
    }

    .status.error {
      background: rgba(239, 68, 68, 0.1);
      border: 1px solid rgba(239, 68, 68, 0.3);
      color: var(--error);
    }

    .status.success {
      background: rgba(34, 197, 94, 0.1);
      border: 1px solid rgba(34, 197, 94, 0.3);
      color: var(--success);
    }

    .status svg {
      width: 18px;
      height: 18px;
      fill: currentColor;
      flex-shrink: 0;
    }

    footer {
      text-align: center;
      margin-top: 32px;
      color: var(--text-secondary);
      font-size: 0.85rem;
    }

    footer a {
      color: var(--accent);
      text-decoration: none;
    }

    footer a:hover {
      text-decoration: underline;
    }

    @media (max-width: 600px) {
      .container {
        padding: 40px 16px;
      }
      
      h1 {
        font-size: 1.8rem;
      }
      
      .card {
        padding: 24px;
      }
      
      .preview-content {
        flex-direction: column;
      }
      
      .preview-thumbnail {
        width: 100%;
        height: 160px;
      }
    }
  </style>
</head>
<body>
  <div class="bg-pattern"></div>
  <div class="grid-overlay"></div>
  
  <div class="container">
    <header>
      <div class="logo">
        <div class="logo-icon">
          <svg viewBox="0 0 24 24"><path d="M10 15l5.19-3L10 9v6m11.56-7.83c.13.47.22 1.1.28 1.9.07.8.1 1.49.1 2.09L22 12c0 2.19-.16 3.8-.44 4.83-.25.9-.83 1.48-1.73 1.73-.47.13-1.33.22-2.65.28-1.3.07-2.49.1-3.59.1L12 19c-4.19 0-6.8-.16-7.83-.44-.9-.25-1.48-.83-1.73-1.73-.13-.47-.22-1.1-.28-1.9-.07-.8-.1-1.49-.1-2.09L2 12c0-2.19.16-3.8.44-4.83.25-.9.83-1.48 1.73-1.73.47-.13 1.33-.22 2.65-.28 1.3-.07 2.49-.1 3.59-.1L12 5c4.19 0 6.8.16 7.83.44.9.25 1.48.83 1.73 1.73z"/></svg>
        </div>
      </div>
      <h1>YouTube Downloader</h1>
      <p class="subtitle">Download videos & audio with ease</p>
    </header>

    <div class="card">
      <form id="downloadForm">
        <div class="input-group">
          <label for="url">Video URL</label>
          <div class="input-wrapper">
            <input type="text" id="url" name="url" placeholder="https://youtube.com/watch?v=..." required>
            <svg viewBox="0 0 24 24"><path d="M3.9 12c0-1.71 1.39-3.1 3.1-3.1h4V7H7c-2.76 0-5 2.24-5 5s2.24 5 5 5h4v-1.9H7c-1.71 0-3.1-1.39-3.1-3.1zM8 13h8v-2H8v2zm9-6h-4v1.9h4c1.71 0 3.1 1.39 3.1 3.1s-1.39 3.1-3.1 3.1h-4V17h4c2.76 0 5-2.24 5-5s-2.24-5-5-5z"/></svg>
          </div>
        </div>

        <div class="input-group">
          <label>Format</label>
          <div class="format-toggle">
            <div class="format-option">
              <input type="radio" name="format" id="video" value="video" checked>
              <label for="video">
                <svg viewBox="0 0 24 24"><path d="M17 10.5V7c0-.55-.45-1-1-1H4c-.55 0-1 .45-1 1v10c0 .55.45 1 1 1h12c.55 0 1-.45 1-1v-3.5l4 4v-11l-4 4z"/></svg>
                <span>Video (MP4)</span>
              </label>
            </div>
            <div class="format-option">
              <input type="radio" name="format" id="audio" value="audio">
              <label for="audio">
                <svg viewBox="0 0 24 24"><path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/></svg>
                <span>Audio (MP3)</span>
              </label>
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-primary" id="downloadBtn">
          <svg viewBox="0 0 24 24"><path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"/></svg>
          <span>Download</span>
        </button>
      </form>

      <div class="preview" id="preview">
        <div class="preview-content">
          <img class="preview-thumbnail" id="thumbnail" src="" alt="Video thumbnail">
          <div class="preview-info">
            <div class="preview-title" id="title"></div>
            <div class="preview-meta">
              <span id="uploader"></span>
              <span id="duration"></span>
            </div>
          </div>
        </div>
      </div>

      <div class="status" id="status">
        <svg viewBox="0 0 24 24"></svg>
        <span id="statusText"></span>
      </div>
    </div>

    <footer>
      Powered by <a href="https://github.com/yt-dlp/yt-dlp" target="_blank">yt-dlp</a>
    </footer>
  </div>

  <script>
    const form = document.getElementById('downloadForm');
    const urlInput = document.getElementById('url');
    const downloadBtn = document.getElementById('downloadBtn');
    const preview = document.getElementById('preview');
    const status = document.getElementById('status');
    const statusText = document.getElementById('statusText');

    let debounceTimer;

    // Fetch video info when URL changes
    urlInput.addEventListener('input', () => {
      clearTimeout(debounceTimer);
      const url = urlInput.value.trim();
      
      if (!url || !isValidYoutubeUrl(url)) {
        preview.classList.remove('show');
        return;
      }

      debounceTimer = setTimeout(() => fetchVideoInfo(url), 800);
    });

    function isValidYoutubeUrl(url) {
      return url.includes('youtube.com/watch') || 
             url.includes('youtu.be/') || 
             url.includes('youtube.com/shorts/');
    }

    async function fetchVideoInfo(url) {
      try {
        const response = await fetch('/api/info', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ url })
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error);
        }

        document.getElementById('thumbnail').src = data.thumbnail;
        document.getElementById('title').textContent = data.title;
        document.getElementById('uploader').textContent = data.uploader;
        document.getElementById('duration').textContent = data.duration;
        preview.classList.add('show');
        hideStatus();
      } catch (err) {
        preview.classList.remove('show');
      }
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const url = urlInput.value.trim();
      const format = document.querySelector('input[name="format"]:checked').value;

      if (!url) {
        showStatus('error', 'Please enter a YouTube URL');
        return;
      }

      if (!isValidYoutubeUrl(url)) {
        showStatus('error', 'Please enter a valid YouTube URL');
        return;
      }

      setLoading(true, 0);
      hideStatus();

      const downloadUrl = `/download?url=${encodeURIComponent(url)}&format=${format}`;
      
      // Use Server-Sent Events for progress
      const eventSource = new EventSource(downloadUrl);
      
      eventSource.addEventListener('progress', (e) => {
        const data = JSON.parse(e.data);
        setLoading(true, data.percent);
      });

      eventSource.addEventListener('info', (e) => {
        const data = JSON.parse(e.data);
        showStatus('success', `Downloading: ${data.title}`);
      });

      eventSource.addEventListener('complete', (e) => {
        const data = JSON.parse(e.data);
        eventSource.close();
        
        // Trigger file download
        const a = document.createElement('a');
        a.href = data.downloadUrl;
        a.style.display = 'none';
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);

        setLoading(false);
        showStatus('success', 'Download complete! Check your downloads folder.');
      });

      eventSource.addEventListener('error', (e) => {
        eventSource.close();
        setLoading(false);
        
        try {
          const data = JSON.parse(e.data);
          showStatus('error', data.message || 'Download failed');
        } catch {
          showStatus('error', 'Download failed. Please try again.');
        }
      });

      eventSource.onerror = () => {
        eventSource.close();
        setLoading(false);
        showStatus('error', 'Connection lost. Please try again.');
      };
    });

    function setLoading(loading, percent = null) {
      downloadBtn.disabled = loading;
      if (loading) {
        if (percent !== null && percent > 0) {
          downloadBtn.innerHTML = `<div class="spinner"></div><span>${percent}%</span>`;
        } else {
          downloadBtn.innerHTML = '<div class="spinner"></div><span>Preparing...</span>';
        }
      } else {
        downloadBtn.innerHTML = '<svg viewBox="0 0 24 24"><path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"/></svg><span>Download</span>';
      }
    }

    function showStatus(type, message) {
      status.className = `status show ${type}`;
      statusText.textContent = message;
      
      const svg = status.querySelector('svg');
      if (type === 'error') {
        svg.innerHTML = '<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>';
      } else {
        svg.innerHTML = '<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>';
      }
    }

    function hideStatus() {
      status.classList.remove('show');
    }
  </script>
</body>
</html>

